{# Insertamos la base #}
{% extends 'base.html.twig' %}

{# Aplicamos el titulo #}
{% block title %}Catálogo de actores{% endblock %} 
{% block main %}
	{{ parent() }}
	<h1 class="display-6">Listado de actores</h1>


	{# <p>A lo largo de las próximas semanas iremos editando este ejemplo para dotarlo de nuevas características y funcionalidades.</p> #}

	<table class="table table-striped table-bordered">
		<tr>
			<th>ID</th>
			<th>nombre</th>
			<th>fecha nacimiento</th>
			<th>nacionalidad</th>
			<th>biografía</th>

			<th></th>
		</tr>
		{% for actor in actores %}
			<tr>
				<td>{{actor.id}}</td>
				<td>{{actor.nombre}}</td>
				{# <td>{{actor.fecha_nacimiento}}</td> #}
				<td>{{  actor.fecha_nacimiento|date("m/d/Y") }} </td>
				{# {{ actor.fecha_nacimiento|date("m/d/Y") }} #}
				<td>{{actor.nacionalidad}}</td>
				<td>{{actor.biografia}}</td>

				<td class="text-center">
					<a href="{{path('actor_show', {'id':actor.id})}}">
						<img  height="20" width="20" src="{{asset('/images/buttons/show.png')}}" alt="Ver detalles" title="Ver detalles">
					</a>
					<a href="{{path('actor_edit', {'id':actor.id})}}">
						<img  height="20" width="20" src="{{asset('/images/buttons/update.png')}}" alt="Modificar" title="Modificar">
					</a>
					<a href="{{path('actor_delete', {'id':actor.id})}}">
						<img  height="20" width="20" src="{{asset('/images/buttons/delete.png')}}" alt="Borrar" title="Borrar">
					</a>
					
				</td>
			</tr>
		{% endfor %}
	</table>
{% endblock %}