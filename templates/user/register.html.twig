{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="bg-light border row align-items-center justify-content-center my-3 p-2">
        <div class="row">
            <div class="col-8">
                <h3 class="my-2">Registro de usuario</h3>
                {{ form_start(registrationForm.email) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.displayname, {label:'Nombre'}) }}
                    {{ form_row(registrationForm.plainPassword, {label:'Password'}) }}
                    {{ form_row(registrationForm.phone, {label:'Teléfono'}) }}
                    <div class="row">
                        <div class="col">
                            {{ form_row(registrationForm.city, {label: 'Población'}) }}
                        </div>
                        <div class="col">
                            {{ form_row(registrationForm.country, {label: 'País'}) }}
                        </div>
                    </div>
            </div>
        </div>
        <h3 class="mt-3">Términos y condiciones</h3>
        <p>Este es un ejemplo de clase y los datos que introduzcas aquí no serán tratados con ningún tipo de fin comercial.</p>
        <div class="text-center">
            {{ form_row(registrationForm.agreeTerms, {
                label:'Acepto los terminos'
            }) }}
            {{ form_rest(registrationForm) }}
            <button type="submit" class="btn btn-primary">Registro</button>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}





