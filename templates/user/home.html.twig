{# Insertamos la base #}
{% extends 'base.html.twig' %}

{# Aplicamos el titulo #}
{% block title %}Página de usuario {{ app.user.displayname }}{% endblock %} 
{% block main %}
	{{ parent() }}
	<h2>Home de {{ app.user.displayname }}</h2>
	<p>Esta es tu información de usuario.</p>
	<div class="bg-light border row align-items-center justify-content-center my-3">
		<div class="col m-3 p-3 text-start">
			<div class="my-2 p-2">
				<h3>Datos</h3>
				<p><b>#</b> {{app.user.id}}</p>
				<p><b>Nombre</b> {{app.user.displayname}}</p>
				<p><b>Email</b> {{app.user.email}}</p>
				<p><b>Teléfono</b> {{app.user.phone ?? 'Sin especificar'}}</p>
				<p><b>Ciudad</b> {{app.user.city ?? 'Sin especificar'}}</p>
				<p><b>País</b> {{app.user.country ?? 'Sin especificar'}}</p>
			</div>
			<div class="my-2 p-2">
				<h3>Operaciones</h3>
				<ul>
					<li><a href="#">Modificar mis datos</a>.</li>
					<li><a href="#">Baja de usuario</a></li>
				</ul>
			</div>
		</div>
	</div>
	<h3>Aportaciones</h3>
	{% set peliculas = app.user.getPeliculas() %}
	<p>Este usuario ha añadido {{ peliculas|length }} películas a SymfoFilms.</p>
	{# incluye la subvista con la lista de películas #}
	{% include '/includes/lista_peliculas.html.twig' %}
{% endblock %}